<?xml version="1.0" ?>

<robot name="rb1">

    <!-- Coloring  -->
    <material name="red">
            <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
            <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Base footprint -->
    <link name="base_footprint">
    </link>

    <joint name="base_link_base_footprint_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 -0.15"/>
        <parent link="base_link"/>
        <child link="base_footprint"/>
    </joint>

    <!-- Base link -->
    <link name="base_link">
        <collision>
            <geometry>
                <cylinder length="0.3" radius="0.25" />
            </geometry>
        </collision>
        
        <inertial>
            <mass value="20" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.4625" ixy="0" ixz="0" iyy="0.4625" iyz="0" izz="0.625" />
        </inertial>

        <visual>
            <geometry>
                <cylinder length="0.3" radius="0.25" />
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
   
    <!-- Left wheel -->
   <link name="left_wheel">
        <collision>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="-1.57079632 0 0" />
            <inertia ixx="0.00102083" ixy="0.0" ixz="0.0" iyy="0.00102083" iyz="0.0" izz="0.0003125" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_link_left_wheel_joint" type="continuous">
        <axis xyz="0 1 0" rpy="0 0 0" />
        <origin xyz="0 -0.2 -0.15" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="left_wheel" />
    </joint>

    <!-- Right Wheel -->
   <link name="right_wheel">
        <collision>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="-1.57079632 0 0" />
            <inertia ixx="0.00102083" ixy="0.0" ixz="0.0" iyy="0.00102083" iyz="0.0" izz="0.0003125" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="-1.57079632 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_link_right_wheel_joint" type="continuous">
        <axis xyz="0 1 0" rpy="0 0 0" />
        <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
        <parent link="base_link" />
        <child link="right_wheel" />
    </joint>

    <!-- Front caster -->
    <link name="front_caster">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
                
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00025" ixy="0.0" ixz="0.0" iyy="0.00025" iyz="0.0" izz="0.00025" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_front_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
        <parent link="base_link" />
        <child link="front_caster" />
    </joint>

    <!-- Rear caster -->
   <link name="rear_caster">
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.00025" ixy="0.0" ixz="0.0" iyy="0.00025" iyz="0.0" izz="0.00025" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_link_rear_caster_joint" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
        <parent link="base_link" />
        <child link="rear_caster" />
    </joint>

    <!-- Link - Laser -->
   <link name="front_laser">
        <collision>
            <origin xyz="0 0 0" rpy="3.14159265 0 0"/>
            <geometry>
                <cylinder radius="0" length="0"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="3.14159265 0 0" />
            <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="3.14159265 0 0"/>
            <geometry>
                <cylinder length="0" radius="0"/>
            </geometry>
        </visual>
    </link>

    <joint name="base_link_front_laser_joint" type="fixed">
        <origin rpy="3.14159265 0 0" xyz="0.25 0 0.075" />
        <parent link="base_link" />
        <child link="front_laser" />
    </joint>

    <!-- Gazebo Properties -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    
    <gazebo reference="front_caster">
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
        <material>Gazebo/Gray</material>
    </gazebo>

    <gazebo reference="rear_caster">
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
        <material>Gazebo/Gray</material>
    </gazebo>


    <!-- Gazebo Plugins -->
    <!-- Robot differential driver -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>base_link_left_wheel_joint</leftJoint>
            <rightJoint>base_link_right_wheel_joint</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>1000</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <!-- Laser scan -->
    <gazebo reference="base_link_front_laser_joint">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>

    <gazebo reference="front_laser">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

</robot>